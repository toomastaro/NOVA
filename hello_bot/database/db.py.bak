from sqlalchemy import text, insert, exc

from hello_bot.database import Base
from hello_bot.database.user.crud import UserCrud
from hello_bot.database.settings.crud import SettingCrud, Setting
from hello_bot.utils.schemas import HelloAnswer, ByeAnswer, Protect
from utils.database_mixin import engine


class Database(
    UserCrud,
    SettingCrud,
):
    async def create_tables(self):
        async with engine.begin() as conn:
            await conn.execute(text(f'CREATE SCHEMA IF NOT EXISTS "{self.schema}"'))
            await conn.execute(text(f'SET search_path TO "{self.schema}"'))
            await conn.run_sync(Base.metadata.create_all)

            try:
                await conn.execute(
                    insert(Setting).values(
                        {
                            'id': 1,
                            "answers": [],
                            "hello": HelloAnswer().model_dump(),
                            "bye": ByeAnswer().model_dump(),
                            "protect": Protect().model_dump()
                        }
                    )
                )
            except (exc.IntegrityError, exc.ProgrammingError) as e:
                print(e)

    async def drop_schema(self):
        async with engine.begin() as conn:
            await conn.execute(text(f'DROP SCHEMA IF EXISTS "{self.schema}" CASCADE'))
